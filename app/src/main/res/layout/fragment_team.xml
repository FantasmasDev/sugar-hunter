<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TeamFragment">


    <TextView
        android:id="@+id/teamTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/team"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/margin_24dp"
        android:paddingTop="@dimen/margin_19dp"
        android:paddingBottom="@dimen/margin_19dp"
        android:paddingStart="@dimen/margin_16dp"
        android:paddingEnd="@dimen/margin_8dp"
        android:textSize="@dimen/textSize_22sp"
        android:fontFamily="@font/ys_display_medium"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/teamTitle"
        android:layout_marginTop="@dimen/margin_16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/teamAuthorTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teamAuthorTitle"
            android:textSize="@dimen/textSize_32sp"
            android:fontFamily="@font/ys_display_bold"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/margin_8dp"
            android:paddingTop="@dimen/margin_8dp"
            android:paddingStart="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/teamAuthor1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teamAuthor1"
            android:textSize="@dimen/textSize_16sp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_24dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/teamAuthor2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teamAuthor2"
            android:textSize="@dimen/textSize_16sp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/teamAuthor3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teamAuthor3"
            android:textSize="@dimen/textSize_16sp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"/>

        <TextView
            android:id="@+id/teamAuthor4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/teamAuthor4"
            android:textSize="@dimen/textSize_16sp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_16dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
